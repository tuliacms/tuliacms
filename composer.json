{
    "type": "project",
    "name": "tuliacms/tuliacms",
    "license": "MIT",
    "version": "0.0.1-alpha",
    "require": {
        "tuliacms/cms": "0.0.1-alpha"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Tulia\\Theme\\": "extension/theme",
            "Tulia\\Module\\": "extension/module"
        }
    },
    "require-dev": {
        "symfony/web-profiler-bundle": "5.4.*",
        "symfony/debug-bundle": "5.4.*"
    },
    "repositories": [
        {
            "type": "path",
            "url": "./core",
            "options": {
                "symlink": true
            }
        }
    ],
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "post-create-project-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.dist', '.env');\"",
            "@composer dump-autoload -o",
            "@auto-scripts",
            "@php bin/console setup"
        ]
    }
}

{
    "type": "project",
    "name": "tuliacms/tuliacms",
    "license": "MIT",
    "version": "0.0.1-alpha",
    "require": {
        "php": ">=8.1",
        "tuliacms/cms": "dev-master"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Tulia\\Theme\\": "extension/theme",
            "Tulia\\Module\\": "extension/module"
        }
    },
    "require-dev": {
        "symfony/web-profiler-bundle": "5.4.*",
        "symfony/debug-bundle": "5.4.*"
    },
    "scripts": {
        "auto-scripts": [
            "bin/console cache:clear",
            "bin/console assets:install",
            "bin/console assets:publish"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    }
}

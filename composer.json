{
    "type": "project",
    "name": "tuliacms/tuliacms",
    "license": "MIT",
    "version": "dev-master",
    "minimum-stability": "alpha",
    "require": {
        "php": ">=8.1",
        "tuliacms/cms": "dev-master",
        "tuliacms/theme.tulia.lisa": "*",
        "wikimedia/composer-merge-plugin": "^2.0"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "wikimedia/composer-merge-plugin": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Tulia\\Local\\Theme\\": "extension/theme",
            "Tulia\\Local\\Module\\": "extension/module"
        }
    },
    "require-dev": {
        "deployer/deployer": "^7.0",
        "doctrine/doctrine-fixtures-bundle": "^3.4",
        "roave/security-advisories": "dev-master",
        "symfony/debug-bundle": "5.4.*",
        "symfony/web-profiler-bundle": "5.4.*"
    },
    "scripts": {
        "auto-scripts": [
            "bin/console cache:clear",
            "bin/console assets:install",
            "bin/console assets:publish"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-autoload-dump": [
            "Tulia\\Cms\\Platform\\Infrastructure\\Composer\\Scripts\\Extensions::discover",
            "@auto-scripts"
        ]
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "composer.local.json",
                "composer.user.json"
            ],
            "require": [
                "composer.extensions.json"
            ],
            "replace": true,
            "ignore-duplicates": false,
            "merge-dev": true,
            "merge-extra": true,
            "merge-extra-deep": true,
            "merge-replace": true,
            "merge-scripts": true
        }
    }
}
